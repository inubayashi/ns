<div id="dish">
  <h1><%= @dish.name %></h1>

  <%= dish_image_tag @dish %>
  <div id="explanation">
        <table class="dish_show">
      <tr>
	<th><%= :name %></th>
	<td><%= @dish.name %></td>
      </tr>
      <tr>
	<th><%= :yen %></th>
	<td><%= @dish.yen %>円</td>
      </tr>
      <tr>
	<th><%= :kcal %></th>
	<td><%= @dish.kcal %>Kcal</td>
      </tr>
      <tr>
	<th><%= :genra %></th>
	<td><%= @dish.genra %></td>
      </tr>
      <tr>
	<th><%= :category %></th>
	<td><%= @dish.category %></td>
      </tr>
      <tr>
	<th><%= :foodstuffs %></th>
	  <td>
	  <% @dish.foodstuffs.order("recipes.created_at").each do |foodstuff| %>
            <%= foodstuff.name %>
	  <% end %>
	  </td>
      </tr>
      <tr>
	<th><%= :visible %></th>
	<td><%= @dish.visible %></td>
      </tr>
    </table>
  </div>
  <p>
    <%= link_to "一覧に戻る", :admin_dishes %>
  </p>
  <p>
    <%= link_to "編集", :edit_admin_dish %>
  </p>
</div>
<% if session[:order].present? %>
<p><%= link_to image_tag("select.png"), :action=>"order" %></p>
<% end %>

